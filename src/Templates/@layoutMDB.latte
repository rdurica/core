<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet"/>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.1/mdb.min.css" rel="stylesheet"/>
    {block css}{/block}
    <title>{ifset title}{include title|stripHtml}{/ifset}</title>
</head>
<body>
{block navbar}{/block}

<div class="container-fluid mt-5">
        {include content}
</div>

{block scripts}
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.1/mdb.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.3.min.js"
            integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU=" crossorigin="anonymous"></script>
    <script src="https://nette.github.io/resources/js/3/netteForms.min.js"></script>
    <script src="https://unpkg.com/naja@2/dist/Naja.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        naja.initialize();

        function notifyMessage(text, type) {
            const Toast = Swal.mixin({
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 3000,
                timerProgressBar: true,
                didOpen: (toast) => {
                    toast.addEventListener('mouseenter', Swal.stopTimer);
                    toast.addEventListener('mouseleave', Swal.resumeTimer);
                }
            });

            Toast.fire({
                icon: type,
                title: text
            });
        }
    </script>
{/block}
<style>
    body {
        background-color: #eee;
    }
    .swal2-popup {
        margin-top: 60px !important;
    }
    tbody, td, tfoot, th, thead, tr, .datagrid .row-grid-bottom  {
        border: none; !important;
    }
</style>
</body>
{snippet flashMessages}
    <script n:inner-foreach="$flashes as $flash">
        notifyMessage({$flash->message}, {$flash->type});
    </script>
{/snippet}
</html>